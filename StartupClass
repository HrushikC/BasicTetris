import java.awt.Color;
import java.awt.Font;
import java.awt.Graphics;

public class Startup
{
	public Startup()
	{
		
	}
	public void paintComponent(Graphics g)
	{
		Font font = new Font("Arial", Font.BOLD, 30);
		g.setFont(font);
		g.setColor(Color.LIGHT_GRAY);
		g.drawString("This is a game of Tetris:).", 50, 200);
		g.drawString("Arrow keys control down,", 50, 300);
		g.drawString("left, right, and rotation.", 50, 400);
		g.drawString("Press enter to continue.", 50, 500);
	}
	
}
